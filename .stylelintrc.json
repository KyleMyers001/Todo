{
  "extend": "stylelint-config-recommended",
  "plugins": [
       "stylelint-order"
   ],
  "rules": {
    "number-leading-zero": "always",
    "indentation": [ 2, { "severity": "warning" }],
    "order/properties-alphabetical-order": [ true, { "severity": "warning" } ]
  },
  "ignoreFiles": "./public/**"
}
